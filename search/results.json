---
layout: null
---
[
  {% for page in site.pages %}
        {% if page.collection != nil %}
            {% for post in site[page.collection] %}
    {
        "title"    : "{{ post.title | escape }}",
        "category" : "{{ page.collection }}",
        "url"      : "{{ site.baseurl }}{{ page.permalink }}#{{ post.slug }}",
        "content"  : "{{ post.content | strip_html | strip_newlines | remove_chars | escape | jsonify }}"
    }{% unless forloop.last %},{% endunless %}
            {% endfor %}
        {% unless forloop.last %},{% endunless %}     
        {% endif %}   
  {% endfor %}
  ,
  {% for page in site.pages %}
    {% if page.title != nil and page.collection == nil %}
    {
        "title"    : "{{ page.title | escape }}",
        "category" : "{{ page.collection }}",
        "url"      : "{{ site.baseurl }}{{ page.permalink }}",
        "content"  : "{{ page.content | strip_html | strip_newlines | remove_chars | escape | jsonify }}"
    }{% unless forloop.last %},{% endunless %}  
    {% endif %}
  {% endfor %}
]